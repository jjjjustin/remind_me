<!DOCTYPE html>
<html>
<head>
  <title>remind me</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.2/darkly/bootstrap.min.css" rel="stylesheet">
  <%= csrf_meta_tags %>
</head>
<body>

 <%= stylesheet_link_tag "readable", :media => "all" %>
    <%= yield(:page_stylesheet) if content_for?(:page_stylesheet) %>

    <div class="navbar navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a><%= link_to 'REMIND ME', root_path, :class => 'navbar-brand' %></a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'New reminder', new_user_reminder_path(:user_id) %></li>
            <li><%= link_to 'Sign up now!', new_user_registration_path %></li>
            <li><%= link_to 'Sign in', new_user_session_path %></li>
            <li><%= link_to 'Log out', destroy_user_session_path(@user), method: :delete %></li>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <div class='row'>
      <div class='col-md-4'>
      </div>
      <div class='col-md-4'>
        <br>
        <%= yield %>
      </div>
      <div class='col-md-4'>
      </div>
    </div>
    <%= javascript_include_tag "readable" %>
    <%= yield(:page_javascript) if content_for?(:page_javascript) %>
  </body>
</html>
