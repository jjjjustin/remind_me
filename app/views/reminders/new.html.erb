<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for([current_user, @reminder]) do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.select :priority, options_for_select([['urgent'],['high'],['normal'],['low']], params[:priority]),
          {}, { :class => 'span3 controls controls-row' } %>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>

